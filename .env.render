# These will be automatically set by Render when you create a PostgreSQL service
DASHBOARD_DB_HOST=
DASHBOARD_DB_NAME=
DASHBOARD_DB_USER=
DASHBOARD_DB_PASS=
DASHBOARD_DB_PORT=5432

# Application URLs
DASHBOARD_BASE_URL=https://creative-distro-dashboard.netlify.app
MAIN_SITE_URL=https://creativedistro.com

# Email Configuration (SMTP)
SMTP_HOST=your-smtp-host.com
